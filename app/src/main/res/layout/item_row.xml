<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wholeRow"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginStart="70dp"
    android:padding="8dp"
    android:background="@drawable/song_row_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchedMark"
        android:textSize="18dp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:text="1"
        android:id="@+id/indexNo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:textSize="16dp"
        android:gravity="right" />

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_toEndOf="@+id/indexNo"
        android:layout_height="wrap_content"
        android:id="@+id/songArtist"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song name"
            android:id="@+id/songName"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:id="@+id/divider"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/songName"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist name"
            android:id="@+id/artistName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/divider"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="2:12"
        android:id="@+id/runTime"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/songArtist"
        android:gravity="right"
        android:layout_marginRight="5dp" />

</RelativeLayout>