<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <org.jellyfin.androidtv.playback.StdVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bufferingProgress"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/bottomPanel"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185sp"
            android:id="@+id/imageView13"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:alpha="0.65" />

        <ImageView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/poster"
            android:elevation="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/title"
            android:layout_alignTop="@+id/imageView13"
            android:layout_toEndOf="@+id/poster"
            android:layout_marginTop="6sp"
            android:layout_marginStart="20sp"
            android:maxWidth="600sp"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/endTime"
            android:text="20:00 Uhr"
            android:layout_alignTop="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="24sp"
            android:alpha="0.6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/productionYear"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:alpha="0.6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/player_progress_info"
            android:layout_below="@+id/productionYear"
            android:layout_alignStart="@+id/productionYear"
            android:layout_marginTop="20sp" >

        <SeekBar
            style="@style/player_progress"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:id="@+id/playerProgress"
            android:progress="64"
            android:layout_toEndOf="@id/currentPos"
            android:layout_toStartOf="@id/remainingTime"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxHeight="5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerVertical="true"
            tools:text="1:23:00"
            android:id="@+id/currentPos"
            android:maxLines="1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerVertical="true"
            tools:text="-1:25:00"
            android:id="@+id/remainingTime"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:id="@+id/studioImg"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/player_progress_info"
            android:layout_marginBottom="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_progress_info"
            android:layout_alignBottom="@id/poster"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <view
                android:id="@+id/playPauseBtn"
                class="org.jellyfin.androidtv.ui.ImageButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="28dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_pause" />

            <LinearLayout
                android:id="@+id/buttonRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/blank30x30"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="206dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/nextUpPanel"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:id="@+id/imageView14"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:alpha="0.95" />

        <ImageView
            android:layout_width="150sp"
            android:layout_height="300sp"
            android:id="@+id/nextUpPoster"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nextUpTitle"
            android:layout_alignTop="@+id/imageView14"
            android:layout_toEndOf="@+id/nextUpPoster"
            android:layout_marginTop="5sp"
            android:layout_marginStart="20sp"
            android:maxWidth="600sp"
            android:maxLines="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="600sp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nextUpTitle"
            android:id="@+id/nextUpproductionYear"
            android:measureWithLargestChild="false"
            android:layout_below="@+id/nextUpTitle"
            android:layout_marginTop="5sp"
            android:minHeight="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1:30"
            android:id="@+id/startsIn"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/nextUpTitle"
            android:layout_marginEnd="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:id="@+id/nextUpSummary"
            android:layout_below="@+id/nextUpproductionYear"
            android:layout_toEndOf="@+id/nextUpproductionYear"
            android:layout_alignParentEnd="false"
            android:layout_alignStart="@+id/nextUpTitle"
            android:layout_marginTop="5sp"
            android:layout_alignEnd="@+id/nextUpproductionYear"
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_now"
            android:id="@+id/nextButton"
            android:layout_below="@+id/nextUpproductionYear"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:id="@+id/cancelButton"
            android:layout_below="@+id/nextButton"
            android:layout_alignEnd="@+id/nextButton"
            android:minWidth="100sp"
            android:layout_marginTop="5sp"
            android:layout_alignStart="@+id/nextButton" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="275sp"
        android:id="@+id/popupArea"
        android:visibility="gone"
        android:background="@color/black"
        android:layout_gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/rows_area" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/topPanel"
        android:clickable="false">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_gravity="end|top"
            android:layout_marginTop="40sp"
            android:layout_marginEnd="40sp"
            android:typeface="sans"
            android:textSize="40sp"
            android:format12Hour="h:mm"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>