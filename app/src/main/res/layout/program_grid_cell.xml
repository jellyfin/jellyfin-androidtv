<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/light_border"
    android:padding="2sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/programName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:layout_margin="5sp"
        android:textSize="14sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/programName"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="5sp"
        android:id="@+id/infoRow"></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        android:id="@+id/recIndicator"
        android:layout_toEndOf="@+id/infoRow"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@+id/infoRow"
        android:layout_alignBottom="@+id/infoRow"
        android:layout_alignTop="@+id/infoRow"
        android:scaleType="fitCenter" />
</RelativeLayout>