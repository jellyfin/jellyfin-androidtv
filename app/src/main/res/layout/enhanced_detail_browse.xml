<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="20sp"
        android:textSize="32sp"
        android:layout_toLeftOf="@+id/npBug"
        android:layout_marginRight="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="3sp"
        android:id="@+id/infoRow"
        android:layout_toLeftOf="@+id/clock"/>

    <TextView
        android:layout_width="570sp"
        android:layout_height="150sp"
        android:id="@+id/summary"
        android:layout_below="@+id/infoRow"
        android:layout_alignStart="@+id/infoRow"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginTop="12sp"
        android:maxLines="7"
        android:fontFamily="sans-serif-light" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/summary"
        android:id="@+id/rowsFragment"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"/>

    <org.jellyfin.androidtv.ui.ClockUserView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clock"
        android:layout_alignTop="@+id/title"
        android:layout_marginRight="40sp"
        android:layout_alignParentEnd="true" />

    <org.jellyfin.androidtv.ui.NowPlayingBug
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npBug"
        android:layout_alignBottom="@+id/clock"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/clock" />

</RelativeLayout>
