<resources>
    <!-- Default Jellyfin Theme -->
    <style name="Theme.Jellyfin" parent="Theme.Leanback">
        <!-- Colors -->
        <item name="android:colorPrimary">@color/grey</item>
        <item name="android:colorPrimaryDark">@color/grey</item>
        <item name="android:colorAccent">@color/jellyfin_blue</item>
        <!-- Background resource or color -->
        <item name="android:windowBackground">@color/not_quite_black</item>
        <!-- Background color for popup windows -->
        <item name="popupWindowBackground">@color/not_quite_black</item>
        <!-- Search FAB color -->
        <item name="defaultSearchColor">@color/jellyfin_blue</item>
        <!-- Default (non-active) button color -->
        <item name="android:colorButtonNormal">@color/grey</item>

        <!-- Progress Bar -->
        <item name="progressBackground">@color/black</item>
        <item name="progressPrimary">@color/jellyfin_blue</item>
        <item name="progressSecondary">@color/jellyfin_purple</item>

        <!-- Custom Styles for Elements -->
        <item name="android:datePickerStyle">@style/DatePickerCustom</item>
    </style>

    <!-- Legacy Green Theme -->
    <style name="Theme.Jellyfin.Legacy" parent="Theme.Jellyfin">
        <!-- Colors -->
        <item name="android:colorPrimary">#051802</item>
        <item name="android:colorPrimaryDark">#051802</item>
        <item name="android:colorAccent">#52B54B</item>
        <item name="android:windowBackground">@drawable/moviebg</item>
        <item name="defaultSearchColor">#007d8d</item>

        <item name="android:colorButtonNormal">#3c3a3a</item>

        <!-- Progress Bar -->
        <item name="progressBackground">#5a5d5a</item>
        <item name="progressPrimary">#52B54B</item>
        <item name="progressSecondary">#80ffb600</item>
    </style>
</resources>
