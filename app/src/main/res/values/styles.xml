<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DatePickerCustom" >
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="spaced_buttons">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="player_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">5sp</item>
        <item name="android:maxHeight">5sp</item>
    </style>

    <style name="overlay_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">5sp</item>
        <item name="android:maxHeight">5sp</item>
    </style>

    <style name="PopupSlideInTop">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_top</item>
    </style>
    <style name="PopupSlideInRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ActionButton" parent="Widget.Leanback.DetailsActionButtonStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MarqueeImageCardView" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="lbImageCardViewType">Title|Content</item>
    </style>

    <style name="MarqueeImageCardViewTheme" parent="Theme.Leanback">
        <item name="imageCardViewTitleStyle">@style/MarqueeImageCardViewTitleStyle</item>
        <item name="imageCardViewContentStyle">@style/MarqueeImageCardViewContentStyle</item>
    </style>

    <style name="MarqueeImageCardViewTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MarqueeImageCardViewContentStyle" parent="Widget.Leanback.ImageCardView.ContentStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button.Outline" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
