<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JellyfinTheme">
        <!-- Header Text Color -->
        <attr name="headerTextColor" format="reference|color" />
        <!-- Progress Bar Attributes -->
        <attr name="progressBackground" format="reference|color" />
        <attr name="progressPrimary" format="reference|color" />
        <attr name="progressSecondary" format="reference|color" />
        <!-- Popup Window Attributes -->
        <attr name="popupWindowBackground" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="Rating">
        <attr name="value" format="float" />
        <attr name="type" format="enum">
            <enum name="community" value="0" />
            <enum name="critics" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FullHeightView">
        <attr name="forced" format="boolean" />
    </declare-styleable>
</resources>
