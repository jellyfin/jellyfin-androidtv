    <color name="theme_emerald_light">#52B54B</color>
    <color name="theme_emerald_dark">#051802</color>
    <color name="theme_emerald_black">#000000</color>

    <style name="Theme.Jellyfin.Emerald" parent="Theme.Jellyfin">
        <item name="android:colorPrimary">@color/theme_emerald_dark</item>
        <item name="android:colorPrimaryDark">@color/theme_emerald_dark</item>
        <item name="android:colorAccent">@color/theme_emerald_light</item>
        <item name="defaultBackground">@drawable/moviebg</item>
        <item name="defaultSearchColor">@color/theme_emerald_light</item>
        <item name="progressPrimary">@color/theme_emerald_light</item>
        <item name="progressSecondary">@color/theme_emerald_dark</item>
        <item name="popupMenuBackground">@color/theme_emerald_black</item>

        <!-- Control icons -->
        <item name="controlIconBackground">@color/theme_emerald_black</item>
        <item name="controlIconForegroundActive">@color/theme_emerald_light</item>
        <item name="controlIconForegroundInactive">@color/theme_emerald_dark</item>

        <!-- QR drawables -->
        <item name="qrForeground">@color/theme_emerald_dark</item>

        <!-- Tile colors -->
        <item name="tile_search_bg">@color/theme_emerald_light</item>
        <item name="tile_suggestions_bg">@color/theme_emerald_light</item>
        <item name="tile_actors_bg">@color/theme_emerald_light</item>
